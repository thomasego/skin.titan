<!--Titan-->
<window id="101">
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>		

		<!--Bussy-->	
		<control type="group">		
			<visible>!Window.IsActive(MyPrograms.xml)</visible>
			<posx>960</posx> <!--Center-->
			<posy>540</posy> <!--Center-->

			<control type="multiimage">
				<animation effect="fade" start="0" end="100" time="0">WindowOpen</animation>		
				<animation effect="fade" start="100" end="0" time="500" delay="500" >WindowClose</animation>	
				<posx>-40</posx>
				<posy>-40</posy>
				<width>81</width>
				<height>80</height>
				<imagepath>dialogs/busy</imagepath>
				<timeperimage>100</timeperimage>
				<colordiffuse></colordiffuse>
				<fadetime>0</fadetime>
			</control>
		</control>	

		<!--For Artwork Downloader-->
		<control type="group">	
			<posx>60</posx>
			<posy>40</posy>

			<include>animation_fade_visible_hidden</include>
			<include>animation_fade_open_close</include>			
			<visible>Window.IsActive(MyPrograms.xml)</visible>

			<control type="multiimage">		<!--Busy Image-->
				<description>Busy animation</description>
				<posx>0</posx>
				<posy>15</posy>
				<width>64</width>
				<height>64</height>			
				<imagepath>dialogs/extended_progress_bar</imagepath>
				<timeperimage>100</timeperimage>				
				<fadetime>0</fadetime>
			</control>			
			<control type="label" id="1">	<!--Label Artwork Downloader-->				
				<posx>90</posx>
				<posy>0</posy>
				<width>500</width>
				<height>50</height>
				<font>Bold38</font>
				<textcolor>ccmainblue</textcolor>				
				<scroll>false</scroll>    
			</control>
			<control type="label" id="2">	<!--Process Item-->				
				<posx>90</posx>
				<posy>40</posy>
				<width>500</width>
				<height>50</height>
				<font>Reg30</font>
				<textcolor>eewhite</textcolor>				
				<scroll>false</scroll>      
			</control>				
		</control>

		<control type="button" id="10"> 	<!--Cancel-->
			<description>Cancel</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>0</width>				
			<height>0</height>
			<label>-</label>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onleft>10</onleft>
			<onright>10</onright>
			<onup>10</onup>
			<ondown>10</ondown>
		</control>


	</controls>

</window>