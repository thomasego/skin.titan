<!--Titan-->
<window>
	<defaultcontrol always="true">11</defaultcontrol>  
	<controls> 		

		<!--Panel-->
		<control type="image">
			<include>animation_fade_visible_hidden</include>
			<include>animation_fade_open_close</include>	
			<posx>100</posx><!-- +23 -->
			<posy>100</posy>
			<width>1000</width>
			<height>820</height>
			<texture border="39">dialogs/default/bg-black.png</texture>
		</control>

		<!--Header-->
		<control type="group"> 
			<posx>123</posx>
			<posy>100</posy>
			<include>animation_fade_visible_hidden</include>
			<include>animation_fade_open_close</include>	
			<control type="label">	<!--Header Video-->
				<visible>!pvr.IsPlayingRadio</visible>
				<posx>100</posx>
				<posy>40</posy>
				<width>600</width>
				<height>50</height>
				<font>Bold38</font>
				<textcolor>mainblue</textcolor>		
				<label>$LOCALIZE[19023] - $INFO[VideoPlayer.ChannelGroup]</label>				
			</control>
			<control type="label">	<!--Header Radio-->
				<visible>pvr.IsPlayingRadio</visible>				
				<posx>100</posx>
				<posy>40</posy>
				<width>600</width>
				<height>50</height>
				<font>Bold38</font>
				<textcolor>mainblue</textcolor>		
				<label>$LOCALIZE[19024] - $INFO[MusicPlayer.ChannelGroup]</label>							
			</control>
			<control type="label">	<!--Info Time Date-->				
				<posx>100</posx>
				<posy>90</posy>
				<width>600</width>
				<height>50</height>
				<font>Reg32</font>
				<textcolor>midgrey</textcolor>
				<label>$INFO[System.Date(DDD)], $INFO[System.Date(d)] $INFO[System.Date(mmm)] $INFO[System.Date(yyyy)] | $INFO[System.Time]</label>			
			</control>

		</control>

		<!--List ID=11-->
		<control type="list" id="11">
			<include>animation_fade_visible_hidden</include>
			<include>animation_fade_open_close</include>	
			<posx>123</posx>
			<posy>270</posy>				
			<width>1920</width>
			<height>600</height>
			<onleft>-</onleft>
			<onright>-</onright>
			<onup>11</onup>
			<ondown>11</ondown>
			<viewtype label="535">list</viewtype>
			<pagecontrol>70</pagecontrol>
			<scrolltime>200</scrolltime>

			<itemlayout height="100" width="1920">
				<control type="label">		<!--Channel Number-->					
					<posx>50</posx>
					<posy>0</posy>
					<width>100</width>
					<height>100</height>
					<font>Reg40</font>
					<textcolor>midgrey</textcolor>
					<selectedcolor>mainblue</selectedcolor>
					<align>left</align>					
					<info>ListItem.ChannelNumber</info>
				</control>
				<control type="image">		<!--Rec-->
					<posx>610</posx>
					<posy>23</posy>
					<width>55</width>
					<height>55</height>
					<texture>pvr/icons/pvr_record.png</texture>
					<visible>ListItem.IsRecording</visible>
				</control>
				<control type="image">		<!--Now Playing Icon-->					
					<posx>190</posx>
					<posy>0</posy>
					<width>55</width>
					<height>55</height>
					<fadetime>600</fadetime>
					<texture>pvr/icons/pvr_play.png</texture>
					<visible>ListItem.Isplaying</visible>
				</control>
				<control type="image">		<!--Chanel Icon-->					
					<posx>110</posx>
					<posy>11</posy>
					<width>75</width>
					<height>75</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>				
				<control type="label">		<!--Channel Name-->				
					<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying">Conditional</animation>
					<posx>200</posx>
					<posy>20</posy>
					<width>954</width>
					<height>25</height>
					<font>Reg32</font>
					<textcolor>midgrey</textcolor>
					<selectedcolor>midgrey</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>					
				</control>
				<control type="label">		<!--Channel Now Playing (LEFT)-->						
					<posx>200</posx>
					<posy>60</posy>
					<width>450</width>
					<height>20</height>
					<font>Reg25</font>
					<textcolor>mainblue</textcolor>
					<selectedcolor>mainblue</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Title]</label>
				</control>		
				<control type="label">		<!--Time: Start, End (RIGHT)-->				
					<posx>650</posx>
					<posy>60</posy>
					<width>300</width>
					<height>20</height>
					<font>Reg25</font>
					<textcolor>mainblue</textcolor>
					<selectedcolor>mainblue</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>[COLOR=midgrey]$LOCALIZE[142] [/COLOR] $INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
				</control>	
				<control type="image">		<!--Separator-->			
					<posx>50</posx>
					<posy>96</posy>
					<width>854</width>
					<height>20</height>		
					<fadetime>400</fadetime>
					<colordiffuse>list_separator</colordiffuse>
					<texture>common/separator.png</texture>			
				</control>
			</itemlayout>
			<focusedlayout height="100" width="900">
				<control type="image">		<!--Slider-->				
					<posx>0</posx>
					<posy>0</posy>
					<width>954</width>
					<height>96</height>					
					<texture>common/button-fo.png</texture>
				</control>
				<control type="label">		<!--Channel Number-->					
					<posx>50</posx>
					<posy>0</posy>
					<width>100</width>
					<height>100</height>
					<font>Reg40</font>
					<textcolor>black</textcolor>
					<selectedcolor>black</selectedcolor>
					<info>ListItem.ChannelNumber</info>
				</control>
				<control type="image">		<!--Rec-->
					<posx>610</posx>
					<posy>23</posy>
					<width>55</width>
					<height>55</height>
					<texture>pvr/icons/pvr_record.png</texture>
					<visible>ListItem.IsRecording</visible>
				</control>
				<control type="image">		<!--Now Playing Icon-->			
					<posx>190</posx>
					<posy>0</posy>
					<width>55</width>
					<height>55</height>
					<fadetime>600</fadetime>
					<texture>pvr/icons/pvr_play.png</texture>
					<visible>ListItem.Isplaying</visible>
				</control>
				<control type="image">		<!--Chanel Icon-->				
					<posx>110</posx>
					<posy>11</posy>
					<width>75</width>
					<height>75</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>				
				<control type="label">		<!--Channel Name-->				
					<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying">Conditional</animation>
					<posx>200</posx>
					<posy>20</posy>
					<width>954</width>
					<height>25</height>
					<font>Reg32</font>
					<textcolor>black</textcolor>
					<selectedcolor>black</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">		<!--Channel Now Playing (LEFT)-->			
					<posx>200</posx>
					<posy>60</posy>
					<width>450</width>
					<height>20</height>
					<font>Reg25</font>
					<textcolor>white</textcolor>
					<selectedcolor>white</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Title]</label>
				</control>		
				<control type="label">		<!--Time: Start, End (RIGHT)-->				
					<posx>650</posx>
					<posy>60</posy>
					<width>300</width>
					<height>20</height>
					<font>Reg25</font>
					<textcolor>white</textcolor>
					<selectedcolor>white</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>[COLOR=black]$LOCALIZE[142] [/COLOR] $INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
				</control>	
				<control type="image">		<!--Separator-->			
					<posx>50</posx>
					<posy>96</posy>
					<width>854</width>
					<height>20</height>		
					<fadetime>400</fadetime>
					<colordiffuse>list_separator</colordiffuse>
					<texture>common/separator.png</texture>			
				</control>
			</focusedlayout>
		</control>

	</controls>
</window>