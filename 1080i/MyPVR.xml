				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<orientation>vertical</orientation>

				<!--Buttons-->
				<control type="label" id="200">	<!--Label Menu-->					
					<width>458</width>
