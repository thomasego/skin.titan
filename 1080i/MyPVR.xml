				<width>500</width>
				<height>800</height>
				<texture border="39">dialogs/default/bg-black.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>			

			<!--Gouplist 9000-->
			<control type="grouplist" id="9000">		
				<posx>21</posx>
				<posy>70</posy>
				<width>458</width>
				<height>650</height>
