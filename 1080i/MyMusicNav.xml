<!--Titan-->
<window id="502">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50,52</views>	

	<controls>

		<!--Music Background-->	
		<include>MusicBackground</include>	
		<!--Time & Weather-->
		<include>TimeWeather</include>	
		<!--Header-->
		<include>Header</include>	
		<!--Music_NowPlaying-->			
		<include>NowPlayingMusic</include>		
		<!--Video_NowPlaying-->			
		<include>NowPlayingVideo</include>	
		
		<!--Hidden Button-->
		<control type="radiobutton" id="19">
			<description>Filter (hidden)</description>
			<include>HiddenButton</include>
		</control>
		
		<!--Views-->
		<include>View_50_List</include>		
		<include>View_52_Panel</include>
		
		<!--Sub Menu Tab Left-->
		<include>SubMenuTabLeft</include>

		<!--Sub Menu-->
		<control type="group"> 
			<posx>15</posx>
			<posy>150</posy>
			
			<visible>!Window.IsActive(DialogKeyboard.xml)</visible>
			
			<include>animation_fade_visible_hidden</include>
			<include>animation_fade_open_close</include>
			<include>animation_sub_menu</include>					

			<!--Panel-->
			<control type="image">
				<posx>-19</posx>
				<posy>360</posy>
				<width>60</width>
				<height>80</height>
				<texture>dialogs/default/arrow-left-black.png</texture>
			</control>			
			<control type="image">				
				<width>500</width>
				<height>800</height>
				<texture border="39">dialogs/default/bg-black.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>	

			<!--Gouplist 9000-->
			<control type="grouplist" id="9000">		
				<posx>21</posx>
				<posy>70</posy>
				<width>458</width>
				<height>650</height>
				<itemgap>3</itemgap>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<orientation>vertical</orientation>

				<!--Buttons-->
				<control type="label" id="200">			<!--Label Menu-->					
					<width>458</width>
					<align>left</align>
					<textoffsetx>50</textoffsetx>
					<font>Light40</font>
					<textcolor>mainblue</textcolor>	
					<label>$LOCALIZE[41090]:</label>	
				</control>
				<control type="image" id="201">			<!--Seperator-->						
					<width>458</width>					
					<height>20</height>	
					<align>left</align>	
					<texture>common/menu-separator.png</texture>				
				</control>	
				<control type="button" id="3">			<!--Button Sort-->	
					<description>Sort</description>
					<include>SubMenuButton</include>		
				</control>
				<control type="togglebutton" id="4">	<!--Button Ascending-->	
					<description>Ascending</description>
					<include>SubMenuButton</include>	
					<label>584</label>
					<altlabel>585</altlabel>									
				</control>
				<control type="button" id="8">			<!--Button Search-->	
					<include>SubMenuButton</include>	
					<label>137</label>
				</control>					
				<control type="radiobutton" id="16">	<!--Button Party Mode-->	
					<description>PartyMode</description>
					<include>SubMenuButton</include>	
					<label>589</label>							
				</control>
				<control type="button" id="5">			<!--Button Files-->	
					<description>Files</description>
					<include>SubMenuButton</include>	
					<label>1214</label>
					<onclick>SetFocus(50)</onclick>										
				</control>
				<control type="image" id="203">			<!--Space-->						
					<width>458</width>					
					<height>20</height>	
					<align>left</align>	
					<texture>common/menu-space.png</texture>				
				</control>		
				<control type="label" id="300">			<!--View:-->						
					<width>458</width>
					<align>left</align>	
					<textoffsetx>50</textoffsetx>
					<font>Light40</font>
					<textcolor>mainblue</textcolor>	
					<label>$LOCALIZE[457]</label>
				</control>	
				<control type="image" id="301">			<!--Seperator-->						
					<width>458</width>					
					<height>20</height>	
					<align>left</align>	
					<texture>common/menu-separator.png</texture>				
				</control>		
				<control type="button" id="302">		<!--View List-->
					<include>SubMenuButton</include>		
					<label>List</label>					
					<onclick>Container.SetViewMode(50)</onclick>
					<onfocus>Skin.Reset(OtherView)</onfocus>					
				</control>	
				<control type="button" id="303">		<!--View Panel-->
					<visible>Container.Content(albums)</visible>
					<include>SubMenuButton</include>	
					<label>Panel</label>					
					<onclick>Container.SetViewMode(52)</onclick>						
				</control>	
			</control>
		</control>
	
		<!--Youtube Search Overlay-->
		<include>YoutubeSearchOverlay</include>	
		
	</controls>
</window>