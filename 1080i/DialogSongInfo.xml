<!--Titan-->
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>	
		
		<!--Dialog Overlay-->		
		<include>DialogOverlay</include>	
		
		<!--Dialog Song Info-->
		<control type="group">		
			<include>animation_dialog</include>	
			<visible>!Window.IsActive(DialogAlbumInfo.xml)</visible>

			<!--Panel-->
			<control type="image">
				<posx>920</posx>
				<posy>249</posy>
				<width>80</width>
				<height>60</height>
				<texture>dialogs/default/arrow.png</texture>
			</control>
			<control type="image">
				<posx>284</posx>
				<posy>269</posy>
				<width>1352</width>
				<height>541</height>
				<texture border="39">dialogs/default/bg.png</texture>
			</control>   
			

			<!--Header 1-->
			<control type="label"><!--Label: Song Infomation-->
				<posx>284</posx>
				<posy>150</posy>				
				<align>center</align>
				<font>Light45</font>
				<width>1352</width>
				<label>658</label>					
			</control>			
			<!--Header 2-->		
			<control type="label"><!--Title: Artist-->				
				<posx>284</posx>
				<posy>200</posy>
				<width>1352</width>
				<align>center</align>
				<font>Light45</font>
				<textcolor>eewhite</textcolor>
				<label>$INFO[ListItem.Artist]</label>
				<scroll>true</scroll>					
			</control>
			
			<!--Icon-->
			<control type="image" id="3">
				<posx>700</posx>
				<posy>350</posy>
				<width>200</width>
				<height>200</height> 
				<fadetime>800</fadetime>
				<aspectratio align="center" aligny="center">stretch</aspectratio>
				<texture background="true" fallback="cover_default.png" diffuse="cover_matte.png">$INFO[ListItem.Icon]</texture>		
			</control>

			<!--Info-->
			<control type="grouplist">
				<posx>950</posx>
				<posy>350</posy>
				<width>870</width>
				<height>210</height>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>

				<control type="label">
					<description>Genre</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Genre,[COLOR darkgrey]$LOCALIZE[515]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<description>Year</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Year,[COLOR darkgrey]$LOCALIZE[562]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Year)</visible>
				</control>
				<control type="label">
					<description>Rating</description>
					<width>870</width>
					<height>42</height>
					<textcolor>midgrey</textcolor>
					<label>$INFO[ListItem.Rating,[COLOR darkgrey]$LOCALIZE[563]:[/COLOR] ]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>

			</control>

			<!--Rating / Plot-->
			<control type="textbox" id="4">
				<description>Review</description>
				<posx>700</posx>
				<posy>590</posy>
				<width>800</width>
				<height>160</height>
				<align>justify</align>
				<font>Light32</font>
				<textcolor>midgrey</textcolor>
			</control>

			
			<!--Buttons-->
			<control type="image">
				<posx>318</posx>
				<posy>303</posy>
				<width>310</width>
				<height>473</height>
				<texture border="5">dialogs/default/inner.png</texture>
			</control>
			<control type="grouplist" id="9000">	
				<posx>318</posx>
				<posy>303</posy>
				<width>310</width>
				<height>473</height>
				<itemgap>-1</itemgap>
				<onup>-</onup>					
				<ondown>-</ondown>	
				<onright>50</onright>     
				<onleft>-</onleft>			
				<orientation>vertical</orientation>
				
				<control type="button" id="200"><!--Search on Youtube-->
					<visible>Container.Content(songs) | Container.Content(artists) |  Container.Content(albums)</visible>
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>		
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>42000</label>						
					<onclick>Skin.SetBool(youtube)</onclick>	
					<onclick>Dialog.Close(songinformation,true)</onclick>						
					<onclick>ActivateWindow(videos,plugin://plugin.video.youtube/?path=/root/search&amp;feed=search&amp;search=$INFO[ListItem.Artist],return)</onclick>
				</control>
				<control type="button" id ="10"><!--Ok button-->					
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>	
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>186</label>
				</control>
				<control type="button" id="11"><!--Cancel button-->					
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>	
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>222</label>
				</control>
				<control type="button" id="12"><!--Album Info button-->					
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>	
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>10523</label>
				</control>			
				<control type="button" id ="13"><!--Get Thumb button-->					
					<width>310</width>
					<height>60</height>
					<align>right</align>
					<textoffsetx>20</textoffsetx>	
					<include>DialogButton</include>
					<texturefocus border="2">dialogs/default/highlight-grey.png</texturefocus>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>	
					<label>13405</label>
				</control>
				
			</control>

		</control>

	</controls>
</window>