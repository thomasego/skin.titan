<!--Titan-->
<window id="610">
	<defaultcontrol always="true">11</defaultcontrol>
	<zorder>3</zorder>
	<controls>
		<control type="group">	        
			<include>DimensionsFullscreen</include>
			<animation effect="slide" end="0,42" time="0" condition="!Window.IsActive(videoosd)">Conditional</animation>

			<!--Panel-->
			<control type="image">
				<posx>-320</posx>
				<posy>-171</posy>
				<width>1620</width>
				<height>1339</height>
				<texture border="610,340,610,340">pvr/pvr_osd_guide.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>

			<!--Dialog PVR Guide OSD-->
			<control type="group">
				<visible>!Window.IsActive(DialogPVRGuideInfo.xml)</visible>	  

				<!--Header-->
				<control type="label">					
					<posx>100</posx>
					<posy>73</posy>
					<width>780</width>
					<height>40</height>
					<align>center</align>
					<textoffsetx>30</textoffsetx>
					<label>$LOCALIZE[19222]$INFO[VideoPlayer.ChannelName, • ,]$INFO[Container(11).ListItem.StartDate, • ,]</label>
					<font>Bold38</font>
					<textcolor>mainblue</textcolor>					
				</control>

				<!--List ID=11-->
				<control type="list" id="11">
					<posx>100</posx>
					<posy>124</posy>
					<width>780</width>
					<height>761</height>
					<onleft>-</onleft>
					<onright>-</onright>					
					<onup>11</onup>
					<ondown>11</ondown>
					<pagecontrol>-</pagecontrol>
					<scrolltime>0</scrolltime>
					<itemlayout width="780" height="76">
						<control type="image">		<!--Separator-->
							<posx>0</posx>
							<posy>60</posy>
							<width>780</width>
							<height>20</height>
							<texture>common/separator.png</texture>
						</control>						
						<control type="label">		<!--Start Time-->
							<description>Label</description>
							<posx>40</posx>
							<posy>0</posy>
							<width>160</width>
							<height>76</height>
							<font>Reg32</font>
							<align>left</align>
							<label>$INFO[ListItem.StartTime]</label>
							<textcolor>99FFFFFF</textcolor>
							<selectedcolor>99FFFFFF</selectedcolor>
							<scroll>false</scroll>							
						</control>
						<control type="label">		<!--Label-->		
							<posx>160</posx>
							<posy>0</posy>
							<width>500</width>
							<height>76</height>
							<font>Reg32</font>
							<align>left</align>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>99FFFFFF</textcolor>
							<selectedcolor>99FFFFFF</selectedcolor>
							<scroll>false</scroll>
						</control>						      
						<control type="image">		<!--Rec-->
							<visible>ListItem.IsRecording</visible>
							<posx>697</posx>
							<posy>0</posy>
							<width>66</width>
							<height>66</height>
							<texture>pvr/icons/pvr_record.png</texture>
						</control>	                        
						<control type="image">		<!--Timer-->
							<posx>697</posx>
							<posy>0</posy>
							<width>66</width>
							<height>66</height>
							<texture>pvr/icons/pvr_timer.png</texture>
							<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
						</control>
					</itemlayout>
					<focusedlayout width="780" height="228">
						<control type="image">		<!--Separator-->
							<posx>0</posx>
							<posy>0</posy>
							<width>780</width>
							<height>20</height>
							<texture>common/separatorxxx.png</texture>
						</control>
						<control type="image">		<!--Separator-->
							<posx>0</posx>
							<posy>220</posy>
							<width>780</width>
							<height>20</height>
							<texture>common/separator.png</texture>
						</control>						
						<control type="label">		<!--Start Time-->	
							<posx>40</posx>
							<posy>0</posy>
							<width>130</width>
							<height>76</height>
							<font>Reg32</font>
							<align>left</align>
							<label>$INFO[ListItem.StartTime]</label>
							<textcolor>mainblue</textcolor>
							<selectedcolor>mainblue</selectedcolor>
							<scroll>false</scroll>								
						</control>
						<control type="label">		<!--Label-->	
							<posx>160</posx>
							<posy>0</posy>
							<width>500</width>
							<height>76</height>
							<font>Reg32</font>
							<align>left</align>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>mainblue</textcolor>
							<selectedcolor>mainblue</selectedcolor>
							<scroll>false</scroll>
						</control>
						<control type="textbox">	<!--Info Plot-->	
							<posx>40</posx>
							<posy>87</posy>
							<width>720</width>
							<height>110</height>
							<font>Reg30</font>
							<align>left</align>
							<label>$INFO[ListItem.Plot]</label>							
							<textcolor>99FFFFFF</textcolor>
							<autoscroll>99FFFFFF</autoscroll>							
						</control>
						<control type="image">		<!--Rec-->
							<visible>ListItem.IsRecording</visible>
							<posx>697</posx>
							<posy></posy>
							<width>66</width>
							<height>66</height>
							<texture>pvr/icons/pvr_record.png</texture>
						</control>	                   
						<control type="image">		<!--Timer-->
							<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
							<posx>697</posx>
							<posy></posy>
							<width>66</width>
							<height>66</height>
							<texture>pvr/icons/pvr_timer.png</texture>	                    	
						</control>
					</focusedlayout>
				</control>

			</control>
		</control>
	</controls>
</window>
